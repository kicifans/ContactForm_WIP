<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.krists.contactform.ContactFormController"
            prefHeight="300.0" prefWidth="300.0">

    <content>
        <GridPane vgap="10" hgap="10" style="-fx-background-color: #A5DFCC  ">
            <Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="Last name: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="E-mail: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="Phone No.: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="Add to favorites " GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <CheckBox fx:id="favoriteCheckbox" GridPane.rowIndex="5" GridPane.columnIndex="1"></CheckBox>

        </GridPane>
    </content>
</DialogPane>
